<shortcuts>
	<skipIfNotSupported/>
	<defaultCurrentUser/>
	<programGroup defaultName="Xponz" location="startMenu"/>
	<shortcut
		name="Xponz Server"
		target="$INSTALL_PATH\Xponz.exe"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Start Xponz server"
		iconFile="$INSTALL_PATH\html\www\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no"
		runAsAdministrator="true">
